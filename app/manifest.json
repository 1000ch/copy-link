{
  "manifest_version": 2,
  "name": "Copy Link",
  "short_name": "Copy Link",
  "version": "1.0.0",
  "description": "Chrome Extension that enables you to copy the current page title and url easily.",
  "author": "1000ch",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "*://*/*"
  ],
  "browser_action": {
    "default_title": "Copy Link",
    "default_popup": "./popup.html"
  },
  "offline_enabled": true
}
